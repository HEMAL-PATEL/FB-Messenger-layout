<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/im_chat"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/selector_chat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55"
            android:textSize="10sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_round_background_red"
            app:layout_constraintTop_toTopOf="@id/im_chat"
            app:layout_constraintBottom_toBottomOf="@id/im_chat"
            app:layout_constraintEnd_toEndOf="@id/im_chat"
            app:layout_constraintStart_toStartOf="@id/im_chat"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>