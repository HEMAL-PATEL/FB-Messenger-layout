<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomViewPager">
        <attr name="swipeable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>
    <declare-styleable name="TimelineView">
        <attr name="tv_margin" format="dimension"/>
        <attr name="tv_lineThickness" format="dimension" />
        <attr name="tv_radius" format="dimension" />
        <attr name="tv_outerRadius" format="dimension" />
        <attr name="tv_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ScaleDownImageTransition">
        <attr name="factor" format="integer"/>
    </declare-styleable>
</resources>
